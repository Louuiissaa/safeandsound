<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background_grey"
    tools:context="com.safeandsound.app.safeandsound.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_grey"
        android:isScrollContainer="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_margin="2dp">

                <ImageButton
                    android:id="@+id/cameraButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_camera"
                    android:paddingTop="30dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:id="@+id/livestreamText"
                    android:background="@color/white"
                    android:textSize="16dip"
                    android:gravity="top|center_horizontal"
                    android:text="@string/livestream"
                    android:textAlignment="gravity" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <ImageButton
                    android:id="@+id/libraryButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_library"
                    android:background="@color/white"
                    android:paddingTop="30dp"
                    android:scaleType="fitCenter" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:id="@+id/libraryText"
                    android:background="@color/white"
                    android:textSize="16dip"
                    android:gravity="top|center_horizontal"
                    android:text="@string/library"
                    android:textAlignment="gravity" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <ImageButton
                    android:id="@+id/airqualityButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_air_quality"
                    android:background="@color/white"
                    android:paddingTop="30dp"
                    android:scaleType="fitCenter"
                    android:onClick="openAirQualityActivity"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:id="@+id/airqualityText"
                    android:background="@color/white"
                    android:textSize="16dip"
                    android:gravity="top|center_horizontal"
                    android:text="@string/airquality"
                    android:textAlignment="gravity"
                    android:onClick="openAirQualityActivity"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <ImageButton
                    android:id="@+id/windowButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_window"
                    android:background="@color/white"
                    android:paddingTop="30dp"
                    android:scaleType="fitCenter"
                    android:onClick="openWindowActivity"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:id="@+id/windowText"
                    android:background="@color/white"
                    android:textSize="16dip"
                    android:gravity="top|center_horizontal"
                    android:text="@string/windows"
                    android:textAlignment="gravity"
                    android:onClick="openWindowActivity"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <ImageButton
                    android:id="@+id/wifiButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_house"
                    android:background="@color/white"
                    android:paddingTop="30dp"
                    android:scaleType="fitCenter"
                    android:onClick="openRoomActivity"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:id="@+id/wifiText"
                    android:background="@color/white"
                    android:textSize="16dip"
                    android:gravity="top|center_horizontal"
                    android:text="@string/rooms"
                    android:textAlignment="gravity"
                    android:onClick="openRoomActivity"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <ImageButton
                    android:id="@+id/settingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_settings"
                    android:background="@color/white"
                    android:paddingTop="30dp"
                    android:scaleType="fitCenter"
                    android:onClick="openSettingsActivity"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:id="@+id/settingsText"
                    android:background="@color/white"
                    android:textSize="16dip"
                    android:gravity="top|center_horizontal"
                    android:text="@string/settings"
                    android:textAlignment="gravity"
                    android:onClick="openSettingsActivity"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
