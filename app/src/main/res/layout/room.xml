<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background_grey"
    tools:context="com.safeandsound.app.safeandsound.Room">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/windowFirstLayout"
        android:background="@color/background_grey"
        android:isScrollContainer="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:textSize="24sp"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:text="@string/rooms"
                    android:textAlignment="gravity" />
                <ImageButton
                    android:id="@+id/cameraButton"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_house"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="6"
            android:fillViewport="true"
            android:orientation="vertical" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="5"
                android:id="@+id/windowButtonLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:orientation="horizontal"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:src="@drawable/ic_house"/>
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:id="@+id/oxygenText"
                        android:background="@color/white"
                        android:textSize="16dip"
                        android:gravity="center_vertical|left"
                        android:text="Elternschlafzimmer"
                        android:textAlignment="gravity" />
                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_next_page"
                        android:background="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:orientation="horizontal"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:src="@drawable/ic_house"/>
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:id="@+id/humidityText"
                        android:background="@color/white"
                        android:textSize="16dip"
                        android:gravity="center_vertical|left"
                        android:text="Kinderzimmer"
                        android:textAlignment="gravity"/>
                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_next_page"
                        android:background="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:orientation="horizontal"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:src="@drawable/ic_house"/>
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:id="@+id/temperatureText"
                        android:background="@color/white"
                        android:textSize="16dip"
                        android:gravity="center_vertical|left"
                        android:text="KÃ¼che"
                        android:textAlignment="gravity"/>
                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_next_page"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="2dp">
                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="15dip"
                    android:background="@color/white"
                    android:src="@drawable/ic_plus"
                    android:scaleType="fitEnd"
                    android:onClick="addWindow"/>
                <Button
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:id="@+id/addRoomText"
                    android:background="@color/white"
                    android:textSize="16dip"
                    android:gravity="center_vertical|left"
                    android:text="Add Room"
                    android:textColor="@color/greyIcons"
                    android:textAlignment="gravity"
                    android:onClick="addRoom"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
